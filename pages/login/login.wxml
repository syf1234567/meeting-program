<!--pages/login/login.wxml-->

<view>
  <form bindsubmit="submit">
    <custom-comp></custom-comp>
    <view>
      <image src="../../images/logo.jpg" style="width:100%;"></image>
    </view>

    <view class="inputView1">
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" name="name" />
    </view>
    <view class="line"></view>
    <!--密码-->
    <view class="inputView2">
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" name="password" />
    </view>
    <button class="loginBtn" form-type="submit" type="primary" style="border:1px solid #ccc;">登录</button>
  </form>
  <button form-type="submit" type="primary"
  class="loginBtn" bindtap="registerButton" style="margin-top: 10px;">注册</button>
</view>